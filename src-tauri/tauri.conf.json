{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ableton Project Library",
  "version": "0.1.0",
  "identifier": "com.abletonprojectlibrary.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ableton Project Library",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' https://sdk.scdn.co; img-src 'self' asset: http://asset.localhost https://i.scdn.co https://*.supabase.co; media-src 'self' asset: http://asset.localhost https://*.supabase.co; style-src 'self' 'unsafe-inline'; frame-src https://open.spotify.com; connect-src 'self' https://api.spotify.com wss://dealer.spotify.com https://*.supabase.co",
      "assetProtocol": {
        "enable": true,
        "scope": ["**/*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
